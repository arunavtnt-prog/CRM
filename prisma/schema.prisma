// Wavelaunch OS Database Schema
// This defines the data model for users, creators, campaigns, and deals

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model - for authentication and access control
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  role         UserRole @default(OPERATOR)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  ownedCreators Creator[]
  activities    Activity[]

  @@index([email])
}

// User roles for access control
enum UserRole {
  ADMIN     // Full system access
  OPERATOR  // Can manage creators, campaigns, deals
  CREATOR   // Limited access to own data
}

// Creator model - influencers/content creators
model Creator {
  id             String        @id @default(cuid())
  name           String
  email          String?
  phone          String?
  instagramHandle String?
  tiktokHandle   String?
  youtubeHandle  String?
  twitterHandle  String?
  status         CreatorStatus @default(ACTIVE)
  notes          String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relations
  ownerId String?
  owner   User?   @relation(fields: [ownerId], references: [id])
  deals   Deal[]

  @@index([name])
  @@index([status])
  @@index([ownerId])
}

// Creator status enum
enum CreatorStatus {
  ACTIVE
  INACTIVE
  PENDING
  ARCHIVED
}

// Campaign model - marketing campaigns for brands
model Campaign {
  id          String         @id @default(cuid())
  title       String
  brand       String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  budget      Float?
  status      CampaignStatus @default(PLANNING)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relations
  deals Deal[]

  @@index([brand])
  @@index([status])
}

// Campaign status enum
enum CampaignStatus {
  PLANNING
  ACTIVE
  COMPLETED
  CANCELLED
}

// Deal model - agreements between campaigns and creators
model Deal {
  id         String     @id @default(cuid())
  value      Float
  status     DealStatus @default(PENDING)
  signedAt   DateTime?
  notes      String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  // Relations
  campaignId String
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  creatorId  String
  creator    Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@index([campaignId])
  @@index([creatorId])
  @@index([status])
}

// Deal status enum
enum DealStatus {
  PENDING
  NEGOTIATING
  SIGNED
  ACTIVE
  COMPLETED
  CANCELLED
}

// Activity model - audit log for tracking actions
model Activity {
  id        String   @id @default(cuid())
  action    String
  entity    String
  entityId  String?
  details   String?
  createdAt DateTime @default(now())

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([entity])
  @@index([createdAt])
}
